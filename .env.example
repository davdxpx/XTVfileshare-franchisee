# --- Database (3-DB Architecture) ---
# MAIN_URI: Read-Only Global Content (Bundles, Franchise Settings)
MAIN_URI=mongodb+srv://main_user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
# USER_URI: Shared Read-Write (Users, Referrals)
USER_URI=mongodb+srv://user_db:pass@cluster.mongodb.net/?retryWrites=true&w=majority
# PRIVATE_URI: Local Franchisee Data (Cache, Configs)
PRIVATE_URI=mongodb+srv://local_user:pass@cluster.mongodb.net/?retryWrites=true&w=majority

# Legacy/Fallback (Defaults to MAIN_URI if others unset)
MONGO_URI=

# --- Channels ---
# BACKUP_CHANNEL_ID: ID of channel to send daily .zip backups
BACKUP_CHANNEL_ID=-100123456789

